{
    "name": "MAD",
    "controller": [
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "二重螺旋|Duet Night Abyss",
                "input": 1,
                "screencap": 2
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "{PROJECT_DIR}/agent/MaaAgent.exe",
        "child_args": []
    },
    "task": [
        {
            "name":"闪避键设置（默认为L Shift）",
            "entry":"SetDodgeKey",
            "doc":"设置闪避键，默认为L Shift",
            "option": ["闪避键设置"]
        },
        {
            "name": "65级mod（扼守）",
            "entry": "def_map1_entry",
            "doc": "进入指定副本后，即可启动，会先自动退出一次复位"
        },
        {
            "name": "驱离通用",
            "entry": "expulsion_entry",
            "doc": "驱离本的通用流程，进入副本后再启动脚本"
        }
    ],
    "option": {
        "闪避键设置": {
            "cases": [
                {
                    "name": "左Shift键",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 160
                            }
                        }
                    }
                },
                {
                    "name": "Ctrl键",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 17
                            }
                        }
                    }
                },
                {
                    "name": "Alt键",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 18
                            }
                        }
                    }
                },
                {
                    "name": "空格键",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 32
                            }
                        }
                    }
                },
                {
                    "name": "数字5键",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 53
                            }
                        }
                    }
                },
                {
                    "name": "鼠标右键",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 2
                            }
                        }
                    }
                },
                {
                    "name": "鼠标侧键1",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 5
                            }
                        }
                    }
                },
                {
                    "name": "鼠标侧键2",
                    "pipeline_override": {
                        "SetDodgeKey": {
                            "custom_action_param": {
                                "dodge_key": 6
                            }
                        }
                    }
                }
            ],
            "default_case": "左Shift键"
        }
    }
}
